= form_for [@space, @chore] do |f|
  - if @chore.errors.any?
    #error_explanation
      %h2= "#{pluralize(@chore.errors.count, "error")} prohibited this chore from being saved:"
      %ul
        - @chore.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :due_at
    = f.text_field :due_at, data: { role: 'datepicker' }
  .actions
    = f.submit 'Save', class: 'btn btn-primary'
