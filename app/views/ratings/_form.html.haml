= form_for @rating do |f|
  - if @rating.errors.any?
    #error_explanation
      %h2= "#{pluralize(@rating.errors.count, "error")} prohibited this rating from being saved:"
      %ul
        - @rating.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :text
    = f.text_field :text
  .field
    = f.label :space_id
    = f.number_field :space_id
  .field
    = f.label :creator_id
    = f.number_field :creator_id
  .field
    = f.label :rated_id
    = f.number_field :rated_id
  .field
    = f.label :chore_id
    = f.number_field :chore_id
  .field
    = f.label :image
    = f.text_field :image
  .actions
    = f.submit 'Save'
