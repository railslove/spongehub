.hero-unit.m-hero{ style: @space.image.file.present? ? "background: url(#{@space.image.url})" : '' }
  %h1.m-hero--title= @space.name
  .m-hero--actions
    = link_to 'Edit', edit_space_path(@space)

.m-box
  %h2 Top Chore

.row
  .span4
    #fames.m-box
      %h2 Fame Top 3
      .action
        Do it
  .span4
    #blames.m-box
      %h2 Blame Top 3
      .action
        Do it
  .span4
    #chores.m-box
      %h2 What to do?
      .action
        Do it
