= form_for @space, :html => { multipart: true } do |f|
  - if @space.errors.any?
    #error_explanation
      %h2= "#{pluralize(@space.errors.count, "error")} prohibited this space from being saved:"
      %ul
        - @space.errors.full_messages.each do |msg|
          %li= msg

  .m-form-row
    = f.label :name
    = f.text_field :name
  .m-form-row
    = f.label :image
    = f.file_field :image
  .m-form-row
    = f.submit 'Save', class: "m-button"
