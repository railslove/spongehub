%h2.m-headline.with-side-margin.dark-text
  Clean all the spaces!

%section.l-column-3
  -@spaces.each_with_index do |space, index|
    .l-column-3--column.m-box_polaroid{class: [("last" if (index+1)%3==0)]}
      = link_to image_tag(space.image_url(:homepage)), space, class: "m-box--image"
      = link_to space.name, space, class: "m-box--title"

.l-row
  = link_to 'Create New Space', new_space_path, class: "m-button"
