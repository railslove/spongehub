!!! 5
%html
  %head
    %title SpongeHub

  = stylesheet_link_tag "application", :media => "all"
  = csrf_meta_tags
  %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}

  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{data: {target: ".nav-collapse", toggle: "collapse"}}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "SpongeHub", root_path, class: "brand"
          .nav-collapse.collapse
            %ul.nav
              %li.active
                =link_to "Home", root_path

            %ul.nav.pull-right
              - if current_user
                %li.user-header-image
                  = link_to user_path(current_user) do
                    = image_tag(current_user.remote_image_url)
                    = current_user.name
                - if current_user.spaces.any?
                  %li.dropdown
                    =link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do
                      My Spaces
                      %b.caret
                    %ul.dropdown-menu
                      - current_user.spaces.each do |space|
                        %li= link_to space.name, space
                %li
                  = link_to "Sign out", signout_path
              - else
                %li.dropdown
                  =link_to "Login or...", "/auth/identity"
                %li.dropdown
                  =link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do
                    Sign in using ..
                    %b.caret
                  %ul.dropdown-menu
                    %li= link_to "Twitter", "/auth/twitter"
                    %li= link_to "GitHub", "/auth/github"
                    %li= link_to "facebook", "/auth/facebook"
                    %li= link_to "google", "/auth/google_oauth2"
                    %li= link_to "unsocial", "/identities/new"

    .container
      = yield

    = javascript_include_tag "application"
