!!! 5
%html
  %head
    %title Rumble12

  = stylesheet_link_tag    "application", :media => "all"
  = csrf_meta_tags
  %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}

  %body

    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{data: {target: ".nav-collapse", toggle: "collapse"}}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "SpongeHub.io", root_path, class: "brand"
          .nav-collapse.collapse
            %ul.nav
              %li.active
                =link_to "Home", root_path

            %ul.nav.pull-right
              %li.dropdown
                =link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do
                  Spaces
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to "Space 1", "#"
                  %li= link_to "Space 2", "#"
                  %li= link_to "Space 3", "#"
              %li
                =link_to "Sign Up"
              %li
                =link_to "Login"

    .container
      = yield

    = javascript_include_tag "application"
